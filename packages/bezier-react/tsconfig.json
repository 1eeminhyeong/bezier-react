{
  "extends": "@bezier/tsconfig/react-library.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build/src",
    "baseUrl": "./",
    "paths": {
      "Components/*": ["src/components/*"],
      "Constants/*": ["src/constants/*"],
      "Foundation": ["src/foundation"],
      "Foundation/*": ["src/foundation/*"],
      "Hooks/*": ["src/hooks/*"],
      "Layout/*": ["src/layout/*"],
      "Providers/*": ["src/providers/*"],
      "Types/*": ["src/types/*"],
      "Utils/*": ["src/utils/*"],
      "Worklets/*": ["src/worklets/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
