{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build/src",
    "noEmit": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "ESNext"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "noImplicitAny": false
  },
  "types": ["react", "jest"]
}
