{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "verify": "ts-node -P ./tsconfig.script.json scripts/check-npm-version.ts",
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "husky": "^6.0.0",
    "ts-node": "^8.10.2",
    "turbo": "^1.2.6",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": "16.2.0",
    "npm": "7.13.0"
  }
}
